<Page x:Class="ChatClient.View.MainView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatClient.View"
      xmlns:dto="clr-namespace:ChatShared.DTO;assembly=ChatShared"
      xmlns:vm="clr-namespace:ChatClient.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1100"
      Title="MainView">

    <Page.DataContext>
        <vm:MainViewModel/>
    </Page.DataContext>

    <Grid Background="{StaticResource WindowBorder}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*" MinWidth="200"/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Border 
               Width="Auto" 
               Height="Auto" 
               Background="{StaticResource WindowBorderInactive}"
               CornerRadius="0,0,0,0"
              >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.15*"/>
                    <RowDefinition/>
                    <RowDefinition Height="0.1*"/>
                </Grid.RowDefinitions>
                <Viewbox 
                    Stretch="Uniform"
                    StretchDirection="Both"
                                        HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                    <StackPanel 
                    Orientation="Horizontal"

                        Margin="10,15">
                        <Border
                        Background="SkyBlue"
                        MinHeight="80"
                        MinWidth="80"
                        CornerRadius="40"
                        Margin="0,0,10,0"
                        />
                        <TextBlock 
                        Text="{Binding ClientDTO.Login}" 
                        Style="{StaticResource BaseTextBlockStyle}" 
                        FontSize="22"
                        Margin="0,10"
                        d:Text="Username"
                        />
                    </StackPanel>
                </Viewbox>

                <Viewbox
                    Stretch="Uniform"
                    StretchDirection="Both"
                    Grid.Row="1"
                    VerticalAlignment="Top">
                    <StackPanel
                    HorizontalAlignment="Center"
                    >
                        <Button FontSize="20"
                        Command="{Binding CreatRoomCommand}"
                        Content="Создать комнату"/>

                        <ListBox 
                        Background="Transparent"
                        Margin="0,15"
                        ItemsSource="{Binding ChatRooms, UpdateSourceTrigger=PropertyChanged}"
                        SelectionChanged="ListBox_SelectionChanged">
                            <ListBox.ItemTemplate>

                                <DataTemplate
                                >
                                    <StackPanel 
                                    Background="Transparent" 
                                    Orientation="Horizontal">

                                        <Border
                                    Background="SkyBlue"
                                    MinHeight="40"
                                    MinWidth="40"
                                    CornerRadius="40"
                                    Margin="0,0,10,0"
                                    />

                                        <TextBlock
                                        FontSize="15"
                                        VerticalAlignment="Center"
                                        Text="{Binding Name}"
                                        Style="{StaticResource BaseTextBlockStyle}"/>
                                    </StackPanel>
                                </DataTemplate>

                            </ListBox.ItemTemplate>

                            <d:ListBox.ItemsSource>
                                <x:Array Type="{x:Type dto:ChatRoomDTO}">
                                    <dto:ChatRoomDTO Name="TestRoom"/>
                                </x:Array>
                            </d:ListBox.ItemsSource>

                        </ListBox>

                    </StackPanel>
                </Viewbox>

                <Button
                        Command="{Binding LogoutCommand}"
                        HorizontalAlignment="Center"
                        FontSize="25"
                        Content="Выход"
                        Grid.Row="2" 
                        Style="{StaticResource AccentButtonStyle }"
                        />


            </Grid>
        </Border>
        <GridSplitter 
            Grid.Column="1"
            Width="5"
            Background="Transparent"
            HorizontalAlignment="Center"
            />
        <Grid 
            Background="{StaticResource BgColor1}"
            Grid.Column="2">
            <Frame 
            Content="{Binding CurrentPage}"
            NavigationUIVisibility="Hidden"/>
        </Grid>

    </Grid>
</Page>