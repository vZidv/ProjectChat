<Page x:Class="ChatClient.View.MainView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatClient.View"
      xmlns:dto="clr-namespace:ChatShared.DTO;assembly=ChatShared"
      xmlns:vm="clr-namespace:ChatClient.ViewModels"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1100"
      Title="MainView">

    <Page.DataContext>
        <vm:MainViewModel/>
    </Page.DataContext>

    <Grid Background="{StaticResource WindowBorder}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="88"/>
            <ColumnDefinition Width="0.2*" MinWidth="200"/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid 
            Background="{StaticResource BgColor1}">
            
        </Grid>

        <Border 
               Grid.Column="1"
               Width="Auto" 
               Height="Auto" 
               Background="{StaticResource BgColor3}"
               CornerRadius="0,0,0,0"
              >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0">
                    <TextBox 
                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                        Style="{StaticResource DefaultTextBoxStyle}"
                        Margin="10,11"
                        ui:ControlHelper.CornerRadius="15"
                        ui:ControlHelper.PlaceholderText="Поиск"
                        ui:ControlHelper.PlaceholderForeground="{StaticResource Second}"
                        
                        BorderThickness="0"
                        FontSize="18"
                        Foreground="{StaticResource ClearWhite}"
                        VerticalContentAlignment="Center"
                        Background="{StaticResource BgColor4}"
                        />
                </Grid>

                <Viewbox
                    Stretch="Uniform"
                    StretchDirection="Both"
                    Grid.Row="1"
                    VerticalAlignment="Top">
                    <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Left"
                    >


                        <ListBox 
                        Background="Transparent"
                        Margin="0,15"
                        ItemsSource="{Binding FilteredChatRooms, UpdateSourceTrigger=PropertyChanged}"
                        SelectionChanged="ListBox_SelectionChanged">
                            <ListBox.ItemTemplate>

                                <DataTemplate
                                >
                                    <StackPanel 
                                    Background="Transparent" 
                                    Orientation="Horizontal">

                                        <Border
                                    Background="SkyBlue"
                                    MinHeight="40"
                                    MinWidth="40"
                                    CornerRadius="40"
                                    Margin="0,0,10,0"
                                    />

                                        <TextBlock
                                        FontSize="15"
                                        Foreground="{StaticResource ClearWhite}"
                                        VerticalAlignment="Center"
                                        Text="{Binding Name}"
                                        Style="{StaticResource BaseTextBlockStyle}"/>
                                    </StackPanel>
                                </DataTemplate>

                            </ListBox.ItemTemplate>

                            <d:ListBox.ItemsSource>
                                <x:Array Type="{x:Type dto:ChatRoomDTO}">
                                    <dto:ChatRoomDTO Name="TestRoom"/>
                                </x:Array>
                            </d:ListBox.ItemsSource>

                        </ListBox>

                    </StackPanel>
                </Viewbox>




            </Grid>
        </Border>
        <GridSplitter 
            Grid.Column="2"
            Width="5"
            Background="Transparent"
            HorizontalAlignment="Center"
            />
        <Grid 
            Background="{StaticResource BgColor1}"
            Grid.Column="3">
            <Frame 
            Content="{Binding CurrentPage}"
            NavigationUIVisibility="Hidden"/>
        </Grid>

    </Grid>
</Page>