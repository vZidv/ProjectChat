<Page x:Class="ChatClient.View.ClientProfileView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChatClient.View"
      xmlns:vm="clr-namespace:ChatClient.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="ClientProfileView">
    <Page.DataContext>
        <vm:ClientProfileViewModel/>
    </Page.DataContext>
    
    <Grid>
        <Border
            Grid.ColumnSpan="2"
            Background="Black"
            Opacity="0.4"
            />
        <Button
HorizontalAlignment="Stretch"
VerticalAlignment="Stretch"
Background="Transparent"
BorderThickness="0"
Command="{Binding ClosePageCommand}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Border
            Width="400"
            Height="550"
            Background="{StaticResource BgColor3}"
            CornerRadius="12">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition/>
                    <RowDefinition Height="10"/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid
                    Grid.Row="0">
                    <TextBlock
                        Text="Мой профиль"
                        Style="{StaticResource BaseTextBlockStyle}"
                        Foreground="{StaticResource Contrast}"
                        FontSize="20"
                        VerticalAlignment="Center"
                        Margin="15,0,0,0"/>
                    <StackPanel 
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                        <Button
                            Command="{Binding OpenEditProfilePageCommand}"
                            FontWeight="Bold"
                            Width="40"
                            Height="40"
                            Background="Transparent"
                            Content="&#xE104;"
                            FontFamily="Segoe MDL2 Assets"
                            Foreground="{StaticResource Second}"
                            >

                        </Button>
                        <Button
                         Width="40"
                         Height="40"
                         FontWeight="Bold"
                         Command="{Binding ClosePageCommand}"
                         Background="Transparent"
                         Foreground="{StaticResource Second}"
                         Content="&#xE8BB;" 
                         FontFamily="Segoe MDL2 Assets"
                        />
                    </StackPanel>
                </Grid>
                <Grid
                    Grid.Row="1"
                    >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Border
                        Width="90"
                        Height="90"
                        Margin="7"
                        CornerRadius="50"
                        Background="{StaticResource Primary}">
                        </Border>                        
                        <Border
                        Width="90"
                        Height="90"
                        Margin="7"
                        CornerRadius="50"
                        d:Background="{StaticResource Primary}">
                            <Border.Background>
                                <ImageBrush ImageSource="{Binding AvatarBitMap, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                            </Border.Background>
                        </Border>
                    </Grid>


                    <StackPanel
                        VerticalAlignment="Center"
                        Grid.Column="1"
                        Orientation="Vertical">
                        <TextBlock 
                            Foreground="{StaticResource Contrast}"
                            FontWeight="DemiBold"
                            FontSize="24"
                            Margin="10,0,10,0">
                            <Run d:Text="Oleg" Text="{Binding ClientProfileDTO.Name}"/>
                            <Run d:Text="Mirovec" Text="{Binding ClientProfileDTO.LastName}"/>
                        </TextBlock>
                        <TextBlock
                            FontWeight="DemiBold"
                            FontSize="16"
                            Margin="10,0"
                            Foreground="{StaticResource Primary}"
                            d:Text="в сети"/>
                    </StackPanel>
                </Grid>
                <Border 
                        Grid.Row="2"
                        Background="{StaticResource BgColor4}"/>
                <Grid
                    Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="90"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid
                        Grid.Column="0">
                        <TextBlock
                            Margin="18"
                            FontSize="45"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Foreground="{StaticResource Contrast}"
                            Text="&#xE946;"
                            FontFamily="Segoe MDL2 Assets"/>
                    </Grid>
                    <Grid
                        Grid.Column="1">
                        <StackPanel VerticalAlignment="Center">
                            <StackPanel Margin="0,10">
                                <TextBlock
                                FontSize="20"
                                Text="{Binding ClientProfileDTO.Email}"
                                Foreground="{StaticResource Contrast}"
                                d:Text="6qe0x@punkproof.com"/>
                                <TextBlock
                                FontSize="15"
                                Text="Email"
                                Foreground="{StaticResource Second}"/>
                            </StackPanel>
                            <StackPanel Margin="0,10">
                                <TextBlock>
                                    <Hyperlink
                                        TextDecorations="None"
                                        Command="{Binding CopyLoginToBufferCommand}">  
                                        <Run 
                                        FontSize="20"    
                                        Foreground="{StaticResource Primary}"
                                        d:Text="@Frog"
                                        Text="{Binding ClientProfileDTO.Login}"/>
                                    </Hyperlink>
                                </TextBlock>
                                
                                <TextBlock
                                FontSize="15"
                                Text="Имя пользователя"
                                Foreground="{StaticResource Second}"/>
                            </StackPanel>
                        </StackPanel>

                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
