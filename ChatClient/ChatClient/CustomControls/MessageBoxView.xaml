<Window x:Class="ChatClient.CustomControls.MessageBoxView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:ChatClient.CustomControls"
        mc:Ignorable="d"
        Title="MessageBox" 
        Height="250" 
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Background="Transparent">


    <Window.Resources>
        <Style TargetType="Window">
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome
                        CornerRadius="15"
                        GlassFrameThickness="0"
                        CaptionHeight="30"
                        ResizeBorderThickness="5"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border 
        Background="{StaticResource AcrylicBackgroundFillColorBaseBrush}"
        CornerRadius="0,0,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <TextBlock 
                FontFamily="Segoe MDL2 Assets"
                FontSize="50"
                Foreground="{Binding IconColor}"
                Text="{Binding Icon}"
                d:Foreground="DodgerBlue"
                d:Text="&#xEB90;"
                HorizontalAlignment="Center"
                Margin="0,15"
                />

            <StackPanel Margin="5,10"
            Grid.Column="1"
            Grid.Row="0">
                
            <TextBlock
            Text="{Binding Title}"
            d:Text="Title text"
            Style="{StaticResource BodyTextBlockStyle}"
            FontSize="20"/>
                <TextBlock
            Text="{Binding Message}"
            d:Text="Base message from messageBox."
            Style="{StaticResource HeaderTextBlockStyle}"
            FontSize="15"/>

            </StackPanel>

            <StackPanel  d:Visibility="Hidden"
                Visibility="{Binding IsOkVisible}"
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Button 
                    Visibility="{Binding IsOkVisible}"
                    Command="{Binding OkCommand}"
                    Style="{StaticResource AccentButtonStyle}"
                    Content="ОК"
                    Width="100"
                    />
            </StackPanel>

            <StackPanel 
                Visibility="{Binding IsYesNoVisible}"
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                        Orientation="Horizontal">
                <Button Margin="10,0"
                    Command="{Binding YesCommand}"
                    Style="{StaticResource AccentButtonStyle}"
                    Content="Да"
                    Width="100"
                    />

                <Button Margin="10,0"
                    Command="{Binding NoCommand}"
                    Style="{StaticResource AccentButtonStyle}"
                    Content="нет"
                    Width="100"
                    />
            </StackPanel>
        </Grid>

    </Border>

</Window>
